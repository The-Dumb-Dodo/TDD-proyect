<h1>Edit My Profile</h1>
<form action="profile-edit" method="post">
  <div class="mb-3 d-flex">
    <p class="form-label">Username:</p>
    <p class="form-label ms-3">{{currentUser.username}}</p>
  </div>
  
   <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input 
      type="text" 
      class="form-control {{#if errors.username}}is-invalid{{/if}}" 
      id="username" 
      name="username" 
      value="{{currentUser.username}}" 
      required>
    <div class="invalid-feedback">
      {{errors.username}}
    </div>
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input 
      type="email" 
      class="form-control {{#if errors.email}}is-invalid{{/if}}" 
      id="email" 
      name="email" 
      value="{{currentUser.email}}" 
      required>
    <div class="invalid-feedback">
      {{errors.email}}
    </div>
  </div>

 

  <div class="mb-3">
    <label for="favoriteAnimal" class="form-label">Favorite Animal</label>
    <input 
      type="text" 
      class="form-control {{#if errors.favoriteAnimal}}is-invalid{{/if}}" 
      id="favoriteAnimal" 
      name="favoriteAnimal" 
      value="{{currentUser.favoriteAnimal}}" 
      required>
    <div class="invalid-feedback">
      {{errors.favoriteAnimal}}
    </div>
  </div>

  

  <button class="btn btn-primary" type="submit">Save</button>
</form>

<a href="/profile" class="btn btn-secondary my-3">Go back</a>