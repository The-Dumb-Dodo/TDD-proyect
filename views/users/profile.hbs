<h1>Hello:{{currentUser.username}}</h1>
<div class="container mt-4">
  <!-- Profile Header (without profile image for now) -->
  <div class="row text-center mb-4">
    <div class="col-12">
      <img src="{{#if currentUser.profilePic}}{{currentUser.profilePic}}{{else}}https://i.guim.co.uk/img/media/33ae7b137326e57b26bcd075b9ed2756b615bb56/0_1046_2662_1596/master/2662.jpg?width=1200&height=1200&quality=85&auto=format&fit=crop&s=0424d8dfe4c91813103c8c8b3b67a7cagit {{/if}}" 
           alt="{{currentUser.username}}'s Profile" class="rounded-circle img-fluid" style="width: 150px; height: 150px;">
      <h1 class="mt-3">{{currentUser.username}}</h1>
    </div>
  </div>

  <!-- Profile Information Cards -->
  <div class="row">
    <!-- Email Section -->
    <div class="col-md-6 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Email</h5>
          <p class="card-text">{{currentUser.email}}</p>
          <button class="btn btn-warning">Edit Email</button>
        </div>
      </div>
    </div>

    <!-- Password Section -->
    <div class="col-md-6 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Password</h5>
          <p class="card-text">●●●●●●●●</p>
          <button class="btn btn-warning">Change Password</button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Highest Score Section -->
    <div class="col-md-6 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">My Highest Score</h5>
          <p class="card-text">{{currentUser.highestScore}}</p>
        </div>
      </div>
    </div>

    <!-- Favorite Animal Section -->
    <div class="col-md-6 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Favorite Animal</h5>
          <p class="card-text">{{currentUser.favoriteAnimal}}</p>
          <button class="btn btn-warning">Edit Favorite Animal</button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Island Section -->
    <div class="col-md-6 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">My Island</h5>
          <p class="card-text">
            {{#if island}}
              {{island.name}}
            {{else}}
              Create your own Dodo island today!
            {{/if}}
          </p>
          <button class="btn btn-warning">Edit Island</button>
        </div>
      </div>
    </div>

    <!-- Edit Profile Button -->
    <div class="col-md-6 mb-3">
          <button class="btn btn-info">Edit Profile</button>
    </div>
  </div>
</div>