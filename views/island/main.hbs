<div class="d-flex align-items-center justify-content-between">
  <h1 class="mb-0">Here is the island page</h1>
  <div>
    {{#if myIsland}}
      <a href="/my-island" class="btn btn-primary">Check my island</a>
    {{else}}
      <a href="/island-form" class="btn btn-light">Create my island</a>
    {{/if}}
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <form class="d-flex">
        <input
          class="form-control me-2"
          type="search"
          placeholder="Search"
          aria-label="Search"
        />
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </form>
    </div>
  </div>
</div>
<div class="row row-cols-1 row-cols-md-4 g-4 my-3">
  {{#each islands as |island|}}
    <div class="col">
      <div class="card">

        <div class="card-body">
          <h5 class="card-title">{{island.name}}</h5>
          <p class="card-text">{{island.theme}}</p>
          <a href="#" class="btn btn-secondary">Check this island</a>
        </div>
      </div>
    </div>
  {{/each}}

</div>